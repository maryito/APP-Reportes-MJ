<User>:
	fecha: ""
	hora: ""
	estado:"Usu"
	nombre:nombre
	empresa:empresa
	Screen:
		name: ""
		Button:
			text: 'BIENVENIDO AL SISTEMA'
			font_size: 35
			background_color: (0, 2, 4, 6)
			on_press: 
                root.current=('usu')
                root.horario() 
    Screen:    	
		name: "usu"
        BoxLayout:
        	orientation: 'vertical'
        	Label:
	        	text: 'Nuevo Proyecto'
	        	font_size: 72
        	Label:
        		text: ("Fecha: {0} \nHora: {1}".format(root.fecha, root.hora))
        		font_size: 30
	        GridLayout:
	        	cols: 2		
		        Label: 
		        	text: "Nombre: "
		        TextInput:
		        	id: nombre
		        	multiline: False
		        Label: 
		        	text: "Tienda: "
		        TextInput:
		        	id: empresa
		        	multiline: False	
		    GridLayout:
		    	cols: 1
				BoxLayout:
					Button:
						background_color: (0,2, 4, 6)  	
				    	text: 'Inicio '+root.estado
						on_press: 		           
			                root.usuario() 
			        		root.current=('categoria')
    Screen:    	
		name: "categoria"
		GridLayout:
			spacing: "10dp"
			
			cols: 1
			Button:
				font_size: "30dp"
				text: 'DA'
			Button:
				font_size: "30dp"
				text: 'AV'
			Button:  		    	
				text: 'MENU PRINCIPAL'
				on_press: 		  
	        		root.current=('')
